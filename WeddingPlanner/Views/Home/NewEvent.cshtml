<H1>Plan your Wedding</H1>

<a href="/success">Dashboard</a>
<a href="/logout" >Log Out</a>
@model Event
<form asp-action="AddEvent" asp-controller="Home" method="post">
     <p>
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne">
        <span asp-validation-for="WedderOne"></span>
    </p>

    <p>
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo">
        <span asp-validation-for="WedderTwo"></span>
    </p>

    <p>
        <label asp-for="Date"></label>
        <input type="date" asp-for="Date">
        <span asp-validation-for="Date"></span>
    </p>

    <p>
        <label asp-for="Address"></label>
        <input asp-for="Address">
        <span asp-validation-for="Address"></span>
    </p>
    <input type="hidden" asp-for="UserId" value="@ViewBag.UserId">

    <p><button>Create</button></p>

</form>